<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>


<VBox maxHeight="1.7976931348623157E308" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller.LoginController">
   <effect>
      <Blend />
   </effect>
   <children>
      <TextField fx:id="nombre" maxWidth="1.7976931348623157E308" prefHeight="49.0" prefWidth="600.0" promptText="Ingrese su nombre" >
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>    
      </TextField>
      <TextField fx:id="apellido" maxWidth="1.7976931348623157E308" prefHeight="49.0" prefWidth="600.0" promptText="Ingrese su apellido">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </TextField>
      <TextField fx:id="dni" maxWidth="1.7976931348623157E308" prefHeight="49.0" prefWidth="600.0" promptText="Ingrese su dni" >
       <padding>
           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
       </padding>
      </TextField>
      <TextField fx:id="email" maxWidth="1.7976931348623157E308" prefHeight="49.0" prefWidth="600.0" promptText="Ingrese su mail" >
       <padding>
           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
       </padding>
   </TextField>
      <Button fx:id="botonDatosIngresados" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="62.0" prefWidth="304.0" text="Continuar" />
   </children>
   <VBox.margin>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </VBox.margin>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
